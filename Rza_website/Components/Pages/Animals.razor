@page "/Animals"
@inherits LayoutComponentBase

<PageTitle>Animals</PageTitle>

<section class="animals-section">
    <h1>Animals at Riget Zoo</h1>
    <p>Come meet our diverse collection of animals from all over the world!</p>

    <div class="animal-list">
        <div class="animal-item">
            <img src="images/Lion.png" alt="Lion">
            <h2>Lion</h2>
            <p>Known as the king of the jungle, lions are one of our most majestic residents.</p>
        </div>
        <div class="animal-item">
            <img src="images/Elephant1.png" alt="Elephant">
            <h2>Elephant</h2>
            <p>Our African elephants are the largest land mammals, full of grace and strength.</p>
        </div>
        <div class="animal-item">
            <img src="images/penguin.jpg" alt="Penguin">
            <h2>Penguin</h2>
            <p>Watch our playful penguins as they waddle and swim in their ice-cold habitat.</p>
        </div>
    </div>
</section>